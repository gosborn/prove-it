<% if current_user %>
	<p style="text-align: center;">Your top three competitors:</p>
	<% @user.top_3_competitors.each.with_index do |person, idx| %>
	  <div style="text-align: center;">
	  	<%= link_to user_path(person[0]), class: "white-link" do %>
	    		<span><%= idx + 1 %>. <%= person[0].name.capitalize %> with <%= pluralize(person[1], 'Competition') %> </span>
	    <% end %>
	  </div>
	<% end %>
<% else %>
	<span><%= @user.name.capitalize %>'s top three competitors:</span><br>
	<% @user.top_3_competitors.each.with_index do |person, idx| %>
	  <div style="text-align: center;">
	  	<%= link_to user_path(person[0]), class: "white-link" do %>
	    	<span><%= idx + 1 %>. <%= person[0].name.capitalize %> with <%= pluralize(person[1], 'Competition') %></span>
	    <% end %>
	  </div>
	<% end %>
	<% end %>