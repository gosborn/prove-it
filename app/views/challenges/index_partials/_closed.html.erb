<div class="bs-component">
  <table class="table table-striped table-hover">
    <tbody>
        <% if Challenge.closed.size > 0 %>
          <h3> Recently Completed Challenges:</h3>
          <% Challenge.closed.limit(5).each do |challenge| %>
            <tr>
              <td>
                <h4 class="no-caps"><%= link_to challenge.title, challenge_path(challenge) %></h4>
              </td>
            </tr>
          <% end %>
        <% end %>
    </tbody>
  </table>
</div>